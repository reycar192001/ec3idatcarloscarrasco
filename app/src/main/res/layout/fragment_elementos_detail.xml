<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ElementosDetailFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <FrameLayout
        android:id="@+id/fl_background_coupon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#CDDC39"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:layout_width="wrap_content"
            tools:layout_width="300dp"
            tools:layout_height="150dp"
            tools:src="@drawable/ic_google"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_background_coupon">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="nike store"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_detail"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Coupon detail"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_abv"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="18 DEC 2019"
            android:layout_height="wrap_content"/>
        <Button
            style="@style/Widget.Material3.Button.TextButton"
            android:id="@+id/btn_add_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:text="Add Favorite" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>